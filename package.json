{
  "name": "backend-code-challenge",
  "version": "0.0.0",
  "description": "Backend Code Challenge",
  "private": true,
  "author": "Alois Bělaška <alois@belaska.me>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=19.0.0",
    "pnpm": ">=7.11.0"
  },
  "repository": "https://github.com/abelaska/backend-code-challenge",
  "scripts": {
    "demo": "pnpm build && pnpm test && pnpm db:init && pnpm db:seed && pnpm pnpm start",
    "dev": "pnpm run --filter ./apps/api dev",
    "start": "pnpm run --filter ./apps/api start",
    "clean": "rimraf dist coverage *.db *.db-journal && pnpm -r exec rimraf dist **/generated",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:e2e": "pnpm -rc --filter='*-e2e' exec jest tests",
    "test:unit": "pnpm -rc --filter='!*-e2e' exec jest tests",
    "lint": "rome check .",
    "fix": "rome check --apply-suggested .",
    "typecheck": "pnpm -rc exec 'tsc -p . --noEmit'",
    "db:init": "cross-env DATABASE_URL=file:../../dev.db pnpm run --filter ./libs/prisma init --skip-generate",
    "db:reset": "cross-env DATABASE_URL=file:../../dev.db pnpm run --filter ./libs/prisma reset --skip-generate",
    "db:seed": "cross-env DATABASE_URL=file:../../dev.db pnpm run --filter ./tools/prisma/seed seed",
    "generate": "pnpm -r run generate",
    "build": "pnpm run clean && pnpm run generate && pnpm -r run build"
  },
  "dependencies": {
    "@autotelic/fastify-opentelemetry": "0.17.1",
    "@opentelemetry/api": "1.3.0",
    "@opentelemetry/context-async-hooks": "1.8.0",
    "@opentelemetry/core": "1.8.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.34.0",
    "@opentelemetry/exporter-metrics-otlp-http": "0.34.0",
    "@opentelemetry/exporter-jaeger": "1.8.0",
    "@opentelemetry/semantic-conventions": "1.8.0",
    "@opentelemetry/instrumentation": "0.34.0",
    "@opentelemetry/sdk-trace-node": "1.8.0",
    "@opentelemetry/resources": "1.8.0",
    "@opentelemetry/sdk-trace-base": "1.8.0",
    "@prisma/instrumentation": "4.7.0",
    "@prisma/client": "4.7.0",
    "graphql": "16.6.0",
    "graphql-scalars": "1.20.1",
    "mercurius": "11.3.0",
    "@pothos/core": "3.23.0",
    "@pothos/plugin-prisma": "3.37.0",
    "@pothos/plugin-prisma-utils": "0.5.0",
    "@pothos/tracing-opentelemetry": "0.6.8",
    "@pothos/plugin-relay": "3.30.0",
    "@pothos/plugin-tracing": "0.5.7",
    "@pothos/plugin-validation": "3.8.7",
    "@pothos/plugin-with-input": "3.9.7",
    "fastify": "4.10.2",
    "fastify-plugin": "4.3.0",
    "pino": "8.7.0",
    "pino-pretty": "9.1.1",
    "source-map-support": "0.5.21",
    "tslib": "2.4.0",
    "zod": "3.19.1"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/plugin-transform-modules-commonjs": "7.19.6",
    "@graphql-codegen/core": "2.6.6",
    "@graphql-codegen/plugin-helpers": "2.7.2",
    "@graphql-codegen/schema-ast": "2.5.1",
    "@graphql-codegen/typescript": "2.8.2",
    "@graphql-codegen/typescript-operations": "2.5.7",
    "@jest/types": "29.2.1",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.2.0",
    "@types/node": "18.11.9",
    "babel-jest": "29.3.1",
    "cross-env": "7.0.3",
    "esbuild": "0.15.16",
    "esbuild-jest": "0.5.0",
    "esbuild-register": "3.4.1",
    "esbuild-plugin-pino": "1.2.6",
    "get-port-please": "2.6.1",
    "prisma": "4.7.0",
    "concurrently": "7.5.0",
    "husky": "8.0.1",
    "fs-extra": "10.1.0",
    "jest": "29.2.2",
    "ts-node": "10.9.1",
    "lint-staged": "13.0.3",
    "rimraf": "3.0.2",
    "rome": "10.0.1",
    "tsup": "6.5.0",
    "typescript": "4.8.4"
  },
  "prisma": {
    "seed": "pnpm run --filter ./tools/prisma/seed seed"
  },
  "lint-staged": {
    "*.{ts,js}": ["pnpm rome format --write", "pnpm rome check --apply-suggested", "pnpm rome check"]
  }
}
