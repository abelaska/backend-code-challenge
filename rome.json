{
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 120,
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/generated/**",
      "pnpm-lock.yaml"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "all",
      "quoteProperties": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "recommended": true,
        "noUnusedTemplateLiteral": "off"
      }
    },
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/generated/**",
      "pnpm-lock.yaml"
    ]
  }
}
